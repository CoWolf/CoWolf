<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <!-- Phase 1 -->
   <!-- Declare the view part to hold the default implementation --> 
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.category"
            name="CoWolf"/>
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.view"
            name="CoWolf View"/>
   </extension>
   
   <!-- Declare the viewer configuration, and the default content/action bindings -->
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <includes>
            <contentExtension pattern="org.eclipse.ui.navigator.resourceContent"/>
            <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.*"/> 
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <includes>
            <actionExtension pattern="org.eclipse.ui.navigator.resources.*"/>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <includes>
            <contentExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.propertiesContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   
   <!-- Declare a simple filter example that uses core expressions -->
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="de.uni_stuttgart.iste.cowolf.ui.navigator.ContentProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.propertiesContent"
            labelProvider="de.uni_stuttgart.iste.cowolf.ui.navigator.LabelProvider"
            name="Properties File Contents"
            priority="normal">
         <triggerPoints>
            <instanceof
                  value="de.uni_stuttgart.iste.cowolf.ui.navigator.CustomProjectWorkbenchRoot">
            </instanceof>
         </triggerPoints>
      </navigatorContent>
   </extension>
  
  <!-- Phase 2 -->
  <!-- Declare a content extension that renders the contents of a properties file -->
   <!-- Bind the Properties content extension to the viewer -->
  
</plugin>
