<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.category"
            name="CoWolf"/>
      <view
            allowMultiple="false"
            category="de.uni_stuttgart.iste.cowolf.ui.navigator.category"
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.view"
            name="CoWolf View"/>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <includes>
            <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.*"/> 
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.decorator.folders">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <includes>
            <actionExtension pattern="org.eclipse.ui.navigator.resources.*"/>
         </includes>
      </viewerActionBinding>
      <viewer
            viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.view">
         <popupMenu
               id="de.uni_stuttgart.iste.cowolf.ui.navigator.view#PopupMenu">
            <insertionPoint
                  name="group.new"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.open"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.openWith"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.edit"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.reorganize"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.port"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.build"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.generate"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.search"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.additions"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.properties"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.filters.onlyCowolf"
            name="Hide non-Cowolf projects">
         <filterExpression>
            <and>
               <not>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <test
                           property="org.eclipse.core.resources.projectNature"
                           value="de.uni_stuttgart.iste.cowolf.ui.projectNature">
                     </test>
                  </adapt>
               </not>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
            </and>
         </filterExpression>
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.commandCategory"
            name="CoWolf">
      </category>
      <command
            categoryId="de.uni_stuttgart.iste.cowolf.ui.navigator.commandCategory"
            defaultHandler="de.uni_stuttgart.iste.cowolf.ui.navigator.handlers.evolve"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.evolve"
            name="Co-evolve">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handlers.evolve"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.evolve">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:de.uni_stuttgart.iste.cowolf.ui.navigator.view#PopupMenu?before=additions">
         <menu
               label="CoWolf">
            <separator
                  name="de.uni_stuttgart.iste.cowolf.ui.navigator.separator"
                  visible="true">
            </separator>
            <command
                  commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.evolve"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension> 
</plugin>
