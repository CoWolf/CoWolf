<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.*"/> 
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.filters.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension pattern="org.eclipse.ui.navigator.resources.*"/>
         </includes>
      </viewerActionBinding>
</extension>
<extension
point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
activeByDefault="true"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.filters.onlyCowolf"
            name="%commonFilter.name">
         <filterExpression>
            <and>
               <not>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                     <test
                           property="org.eclipse.core.resources.projectNature"
                           value="de.uni_stuttgart.iste.cowolf.ui.projectNature">
                     </test>
                  </adapt>
               </not>
<instanceof
                     value="org.eclipse.core.resources.IProject">
</instanceof>
            </and>
         </filterExpression>
      </commonFilter>
</extension>
<extension
point="org.eclipse.ui.handlers">
      <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handlers.Analyze"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.analyze">
            <enabledWhen>
            <and>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
            <test
                  property="de.uni_stuttgart.iste.cowolf.ui.navigator.propertyTester.analyze.canFoo">
            </test>
            </and>
         </enabledWhen>
      </handler>
</extension>
<extension
point="org.eclipse.ui.menus">
<menuContribution
allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?before=additions">
         <menu
               icon="icons/logo_wulf_15x15.png"
               label="%menu.label">
            <command
                  commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.evolve"
                  icon="icons/logo_wulf_15x15.png"
                  label="%evolve.label"
                  style="push">
            </command>
            <command
                  commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.transform"
                  icon="icons/logo_wulf_15x15.png"
                  label="%coevolve.label"
                  style="push">
            </command>
            <command
                  commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.analyze"
                  icon="icons/logo_wulf_15x15.png"
                  label="%analyze.label"
                  style="push">
            </command>
            <separator
                  name="de.uni_stuttgart.iste.cowolf.ui.navigator.separator"
                  visible="true">
            </separator>
         </menu>
</menuContribution>
   </extension>
   <extension
         id="de.uni_stuttgart.iste.cowolf.ui.navigator.commands"
         name="%extension.name"
         point="org.eclipse.ui.commands">
      <command
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.commands.analyze"
            name="%command.analyze.name">
      </command>
</extension>
<extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.PropertyTester.AnalyzeTester"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.propertyTester.analyze"
            namespace="de.uni_stuttgart.iste.cowolf.ui.navigator.propertyTester.analyze"
            properties="canFoo"
            type="java.lang.Object">
      </propertyTester>
</extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.trigger.StartTrigger">
      </startup>
   </extension>
</plugin>

