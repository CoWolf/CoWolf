<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.category"
            name="%category.name">
      </category>
      <view
            allowMultiple="false"
            category="de.uni_stuttgart.iste.cowolf.ui.navigator.category"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator"
            name="%view.name">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator">
         <popupMenu
               id="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator#PopupMenu">
            <insertionPoint
                  name="group.new"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.port"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.build"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerContentBinding
            viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator">
         <includes>
            <contentExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator">
         <includes>
            <actionExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.NewAction">
            </actionExtension>
            <actionExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.RefreshAction">
            </actionExtension>
            <actionExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.ImportAction">
            </actionExtension>
            <actionExtension
                  pattern="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.ExportAction">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="de.uni_stuttgart.iste.cowolf.ui.navigator.ContentProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.navigatorContent"
            labelProvider="de.uni_stuttgart.iste.cowolf.ui.navigator.LabelProvider"
            name="%navigatorContent.name">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IWorkspaceRoot">
            </instanceof>
         </triggerPoints>
      </navigatorContent>
      <actionProvider
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.actionprovider.NewActionProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.NewAction">
         <enablement>
            <or>
               <instanceof
                     value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
               </instanceof>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
            </or>
         </enablement>
      </actionProvider>
      <actionProvider
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.actionprovider.ImportActionProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.ImportAction">
         <enablement>
            <or>
               <instanceof
                     value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
               </instanceof>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
            </or>
         </enablement>
      </actionProvider>
      <actionProvider
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.actionprovider.RefreshActionProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.RefreshAction">
         <enablement>
            <or>
               <instanceof
                     value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
               </instanceof>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
            </or>
         </enablement>
      </actionProvider>
      <actionProvider
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.actionprovider.ExportActionProvider"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.popup.actionprovider.ExportAction">
         <enablement>
            <or>
               <instanceof
                     value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
               </instanceof>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
            </or>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Creates a new CoWolf project"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfProject"
            name="New CoWolf Project">
      </command>
      <command
            description="Creates a new CoWolf folder"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfFolder"
            name="New CoWolf Folder">
      </command>
      <command
            description="Imports an existing CoWolf project"
            id="de.uni_stuttgart.iste.cowolf.ui.navigator.importCoWolfProject"
            name="Import CoWolf Project">
      </command>
       <command
             description="Exports an existing CoWolf project"
             id="de.uni_stuttgart.iste.cowolf.ui.navigator.exportCoWolfProject"
             name="Export CoWolf Project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handler.NewProjectHandler"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfProject">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="true">
                  <instanceof
                        value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
       <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handler.NewFolderHandler"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfFolder">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="de.uni_stuttgart.iste.cowolf.ui.navigator.CustomProjectContainer">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handler.ImportProjectHandler"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.importCoWolfProject">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="true">
                  <instanceof
                        value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="de.uni_stuttgart.iste.cowolf.ui.navigator.handler.ExportProjectHandler"
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.exportCoWolfProject">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="true">
                  <instanceof
                        value="de.uni_stuttgart.iste.cowolf.ui.navigator.ICustomProjectElement">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:common.new.menu?before=new">
         <command
               commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfFolder"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfProject"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:common.port.menu?before=import">
         <command
               commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.importCoWolfProject"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
       <menuContribution
            allPopups="false"
            locationURI="popup:common.port.menu?before=export">
         <command
               commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.exportCoWolfProject"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.newCoWolfProject"
            disabledIcon="icons/logo_wulf_15x15.png"
            icon="icons/logo_wulf_15x15.png">
      </image>
      <image
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.importCoWolfProject"
            icon="icons/logo_wulf_15x15.png">
      </image>
       <image
            commandId="de.uni_stuttgart.iste.cowolf.ui.navigator.exportCoWolfProject"
            icon="icons/logo_wulf_15x15.png">
      </image>
   </extension>

</plugin>
