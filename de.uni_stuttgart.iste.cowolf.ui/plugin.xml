<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            name="CoWolf">
      </category>
      <wizard
            category="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            class="de.uni_stuttgart.iste.cowolf.ui.wizards.NewProjectWizard"
            finalPerspective="de.uni_stuttgart.iste.cowolf.ui.perspective"
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.wizard.new.custom"
            name="CoWolf Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            name="CoWolf">
      </category>
      <wizard
            category="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            class="de.uni_stuttgart.iste.cowolf.ui.wizards.ImportWizard"
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.wizard.import"
            name="CoWolf project">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            name="CoWolf">
      </category>
      <wizard
            category="de.uni_stuttgart.iste.cowolf.ui.category.wizards"
            class="de.uni_stuttgart.iste.cowolf.ui.wizards.ExportWizard"
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.wizard.export"
            name="CoWolf project">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.uni_stuttgart.iste.cowolf.ui.perspectives.Perspective"
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.perspective"
            name="CoWolf perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uni_stuttgart.iste.cowolf.ui.perspective">
         <view
               id="de.uni_stuttgart.iste.cowolf.ui.navigator.navigator"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="de.uni_stuttgart.iste.cowolf.ui.perspective">
         <newWizardShortcut
               id="de.uni_stuttgart.iste.cowolf.ui.wizard.new.custom">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         id="de.uni_stuttgart.iste.cowolf.ui.projectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.uni_stuttgart.iste.cowolf.ui.natures.ProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/logo_wulf_15x15.png"
            id="de.uni_stuttgart.iste.cowolf.ui.natureImage"
            natureId="de.uni_stuttgart.iste.cowolf.ui.projectNature">
      </image>
   </extension>
</plugin>
